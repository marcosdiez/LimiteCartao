<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.marcosdiez.extratocartao.activities.MainActivityV3">

    <include layout="@layout/item_purchase"/>
    <include layout="@layout/group_purchase"/>
    <include layout="@layout/monthly_purchase"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/no_sms_warning"
        android:id="@+id/warning_no_sms"
        android:layout_gravity="center_horizontal"
        android:background="#f8931d"
        android:foreground="#000000"
        android:visibility="gone"
        android:gravity="center"/>

    <ListView
        android:id="@+id/purchase_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        >
    </ListView>

</LinearLayout>
